<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Website Menu Configuration -->
        <record id="luc_khi_website.main_menu" model="website.menu">
            <field name="name">Main Menu</field>
            <field name="url">/</field>
            <field name="sequence">1</field>
        </record>

        <record id="luc_khi_website.about_menu" model="website.menu">
            <field name="name">Giới thiệu</field>
            <field name="url">/about</field>
            <field name="sequence">10</field>
        </record>

        <record id="luc_khi_website.courses_menu" model="website.menu">
            <field name="name">Khóa học</field>
            <field name="url">/courses</field>
            <field name="sequence">20</field>
        </record>

        <record id="luc_khi_website.blog_menu" model="website.menu">
            <field name="name">Blog</field>
            <field name="url">/blog</field>
            <field name="sequence">30</field>
        </record>

        <record id="luc_khi_website.shop_menu" model="website.menu">
            <field name="name">Sản phẩm</field>
            <field name="url">/shop</field>
            <field name="sequence">40</field>
        </record>

        <record id="luc_khi_website.community_menu" model="website.menu">
            <field name="name">Cộng đồng</field>
            <field name="url">#</field>
            <field name="sequence">50</field>
        </record>

        <record id="luc_khi_website.contact_menu" model="website.menu">
            <field name="name">Liên hệ</field>
            <field name="url">/contact</field>
            <field name="sequence">60</field>
        </record>

        <!-- Community Submenu -->
        <record id="luc_khi_website.clb_menu" model="website.menu">
            <field name="name">CLB</field>
            <field name="url">#</field>
            <field name="parent_id" ref="luc_khi_website.community_menu"/>
            <field name="sequence">10</field>
        </record>

        <record id="luc_khi_website.zalo_menu" model="website.menu">
            <field name="name">Nhóm Zalo</field>
            <field name="url">https://zalo.me/g/example</field>
            <field name="parent_id" ref="luc_khi_website.community_menu"/>
            <field name="sequence">20</field>
            <field name="new_window">True</field>
        </record>
    </data>
</odoo>
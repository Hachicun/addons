<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Website Page List View -->
        <record id="view_luc_khi_website_page_tree" model="ir.ui.view">
            <field name="name">luc_khi.website.page.list</field>
            <field name="model">luc_khi.website.page</field>
            <field name="arch" type="xml">
                <list string="Website Pages">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="page_key"/>
                    <field name="is_published"/>
                    <field name="show_in_menu"/>
                    <field name="menu_sequence"/>
                </list>
            </field>
        </record>

        <!-- Website Page Form View -->
        <record id="view_luc_khi_website_page_form" model="ir.ui.view">
            <field name="name">luc_khi.website.page.form</field>
            <field name="model">luc_khi.website.page</field>
            <field name="arch" type="xml">
                <form string="Website Page">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Page Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="page_key"/>
                                <field name="title"/>
                                <field name="is_published"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="show_in_menu"/>
                                <field name="menu_sequence" invisible="show_in_menu == False"/>
                                <field name="parent_menu_id" invisible="show_in_menu == False"/>
                                <field name="view_id"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Content">
                                <field name="content" placeholder="Page content..."/>
                            </page>
                            <page string="SEO">
                                <group>
                                    <field name="seo_title"/>
                                    <field name="seo_description"/>
                                    <field name="seo_keywords"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Website Page Action -->
        <record id="action_luc_khi_website_page" model="ir.actions.act_window">
            <field name="name">Website Pages</field>
            <field name="res_model">luc_khi.website.page</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first website page
                </p>
                <p>
                    Website pages are used to create custom content pages for your Lục Khí website.
                </p>
            </field>
        </record>

        <!-- Website Page Menu Item -->
        <menuitem id="menu_luc_khi_website_page"
                  name="Website Pages"
                  parent="website.menu_website_configuration"
                  action="action_luc_khi_website_page"
                  sequence="10"/>
    </data>
</odoo>

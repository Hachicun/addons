<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Course Category List View -->
        <record id="view_luc_khi_course_category_tree" model="ir.ui.view">
            <field name="name">luc_khi.course.category.list</field>
            <field name="model">luc_khi.course.category</field>
            <field name="arch" type="xml">
                <list string="Course Categories">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="parent_id"/>
                    <field name="is_published"/>
                </list>
            </field>
        </record>

        <!-- Course Category Form View -->
        <record id="view_luc_khi_course_category_form" model="ir.ui.view">
            <field name="name">luc_khi.course.category.form</field>
            <field name="model">luc_khi.course.category</field>
            <field name="arch" type="xml">
                <form string="Course Category">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Category Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="parent_id"/>
                                <field name="sequence"/>
                                <field name="is_published"/>
                            </group>
                            <group>
                                <field name="seo_title"/>
                                <field name="seo_description"/>
                                <field name="slug"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Category description..."/>
                            </page>
                            <page string="Courses">
                                <field name="course_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="level"/>
                                        <field name="price"/>
                                        <field name="student_count"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Course Category Action -->
        <record id="action_luc_khi_course_category" model="ir.actions.act_window">
            <field name="name">Course Categories</field>
            <field name="res_model">luc_khi.course.category</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first course category
                </p>
                <p>
                    Course categories help organize your courses and make them easier to browse.
                </p>
            </field>
        </record>

        <!-- Course Category Menu Item -->
        <menuitem id="menu_luc_khi_course_category"
                  name="Course Categories"
                  parent="menu_luc_khi_course"
                  action="action_luc_khi_course_category"
                  sequence="10"/>
    </data>
</odoo>

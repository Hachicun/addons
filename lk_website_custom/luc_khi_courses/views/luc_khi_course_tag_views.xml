<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Course Tag List View -->
        <record id="view_luc_khi_course_tag_tree" model="ir.ui.view">
            <field name="name">luc_khi.course.tag.list</field>
            <field name="model">luc_khi.course.tag</field>
            <field name="arch" type="xml">
                <list string="Course Tags">
                    <field name="name"/>
                    <field name="color" widget="color"/>
                </list>
            </field>
        </record>

        <!-- Course Tag Form View -->
        <record id="view_luc_khi_course_tag_form" model="ir.ui.view">
            <field name="name">luc_khi.course.tag.form</field>
            <field name="model">luc_khi.course.tag</field>
            <field name="arch" type="xml">
                <form string="Course Tag">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="Tag Name"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="color" widget="color"/>
                            </group>
                            <group>
                                <div class="oe_grey">
                                    <p>Tags help categorize and filter courses.</p>
                                    <p>Use colors to visually distinguish different types of tags.</p>
                                </div>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Courses">
                                <field name="course_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="level"/>
                                        <field name="price"/>
                                        <field name="student_count"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Course Tag Action -->
        <record id="action_luc_khi_course_tag" model="ir.actions.act_window">
            <field name="name">Course Tags</field>
            <field name="res_model">luc_khi.course.tag</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first course tag
                </p>
                <p>
                    Tags help organize and categorize courses for better navigation and filtering.
                </p>
            </field>
        </record>

        <!-- Course Tag Menu Item -->
        <menuitem id="menu_luc_khi_course_tag"
                  name="Course Tags"
                  parent="menu_luc_khi_course"
                  action="action_luc_khi_course_tag"
                  sequence="20"/>
    </data>
</odoo>

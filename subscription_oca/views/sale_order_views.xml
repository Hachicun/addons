<?xml version="1.0" encoding='UTF-8' ?>
<odoo>
    <record id="view_sale_order_form" model="ir.ui.view">
        <field name="name">view.sale_order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <button
                    name="action_view_subscriptions"
                    invisible="subscriptions_count == 0"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                >
                    <field
                        name="subscriptions_count"
                        widget="statinfo"
                        string="Subscriptions"
                    />
                </button>
            </div>
        </field>
    </record>

    <!-- View riÃªng cho sale.order trong subscription context -->
    <record id="view_sale_order_subscription_tree" model="ir.ui.view">
        <field name="name">sale.order.subscription.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="state" widget="badge"/>
                <field name="commitment_date" widget="date"/>
                <field name="date_order" widget="date"/>
                <field name="amount_total" widget="monetary"/>
                <field name="picking_ids" widget="many2many_tags" 
                       string="Deliveries"/>
            </tree>
        </field>
    </record>
</odoo>

<?xml version="1.0"?>
<odoo>
    <data>
        <record id="company_base_view_order_tree" model="ir.ui.view">
            <field name="name">sale.order.tree.company.base</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='delivery_status']" position="attributes">
                    <attribute name="optional">show</attribute>
                    <attribute name="widget">badge</attribute>
                    <attribute name="string">Delivery Status</attribute>
                    <attribute name="decoration-success">delivery_status == 'full'</attribute>
                    <attribute name="decoration-warning">delivery_status == 'partial'</attribute>
                    <attribute name="decoration-info">delivery_status in ['pending', 'started']</attribute>
                </xpath>
            </field>
        </record>

        <record id="company_base_view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form.company.base</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='delivery_status']" position="attributes">
                    <attribute name="invisible">False</attribute>
                    <attribute name="readonly">1</attribute>
                    <attribute name="widget">badge</attribute>
                    <attribute name="string">Delivery Status</attribute>
                    <attribute name="decoration-success">delivery_status == 'full'</attribute>
                    <attribute name="decoration-warning">delivery_status == 'partial'</attribute>
                    <attribute name="decoration-info">delivery_status in ['pending', 'started']</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

<odoo>
  <record id="view_transaction_webhook_bank_map_list" model="ir.ui.view">
    <field name="name">transaction.webhook.bank.map.list</field>
    <field name="model">transaction.webhook.bank.map</field>
    <field name="arch" type="xml">
      <list>
        <field name="external_account_identifier"/>
        <field name="journal_id"/>
        <field name="company_id"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_transaction_webhook_bank_map_form" model="ir.ui.view">
    <field name="name">transaction.webhook.bank.map.form</field>
    <field name="model">transaction.webhook.bank.map</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="external_account_identifier"/>
            <field name="journal_id"/>
            <field name="company_id" readonly="1"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_transaction_webhook_bank_map" model="ir.actions.act_window">
    <field name="name">Transaction Webhook Bank Mapping</field>
    <field name="res_model">transaction.webhook.bank.map</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Menus omitted to avoid dependency on accounting menu external ids. Add later if needed. -->
</odoo>

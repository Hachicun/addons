<odoo>
  <record id="res_config_settings_view_form_transaction_webhook" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.transaction.webhook</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet" position="inside">
        <div class="app_settings_block" data-string="Transaction Webhook" string="Transaction Webhook">
          <h2>Transaction Webhook</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="casso_webhook_token" password="True"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="casso_webhook_token" string="Casso Webhook Token"/>
                <div class="text-muted">Shared secret for validating Casso webhook requests.</div>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="casso_statement_grouping"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="casso_statement_grouping" string="Statement Grouping"/>
                <div class="text-muted">Grouping strategy (informational).</div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
